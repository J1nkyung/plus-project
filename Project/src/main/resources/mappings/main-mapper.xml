	<select id="getListBest" resultMap="clubResult" >
		<![CDATA[
            SELECT *,
				(6371*acos(cos(radians(37.552333))*cos(radians(club_latitude))*cos(radians(club_longitude)
				-radians(126.937782))+sin(radians(37.552333))*sin(radians(club_latitude))))
				AS distance 
            FROM
                club
            HAVING
				distance < 10
				AND club_shutdate>NOW()
	    	ORDER BY club_heart DESC
                LIMIT 0,1000
	]]>
	
	<!-- <![CDATA[ 
	SELECT * FROM club
	WHERE 1=1
	
	 WHERE club_shutdate > NOW() 
	 AND club_max > club_curnum 
	 ORDER BY club_shutdate - NOW() ASC ]]> 
	 -->
	</select>

	<select id="getListDeadline" resultMap="clubResult">
			<![CDATA[
            SELECT *,
				(6371*acos(cos(radians(37.552333))*cos(radians(club_latitude))*cos(radians(club_longitude)
				-radians(126.937782))+sin(radians(37.552333))*sin(radians(club_latitude))))
				AS distance 
            FROM
                club
            HAVING
				distance < 10
		AND club_shutdate>NOW()
	    	ORDER BY distance ASC
                LIMIT 0,1000
	]]>
	</select>





